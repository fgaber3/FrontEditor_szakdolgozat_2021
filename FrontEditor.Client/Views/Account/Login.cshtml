@model LoginViewModel
@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="loginTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="login-tab" data-toggle="tab" href="#" role="tab" aria-controls="login" aria-selected="true">Bejelentkezés</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="register-tab" href="/Account/Register" aria-selected="false">Regisztráció</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="forgotpass-tab" href="/Account/PasswordReset" aria-selected="false">Elfelejtett jelszó</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="card-body">
                <div class="tab-content" id="loginTabContent">
                    <div class="tab-pane fade show active p-0" id="login" role="tabpanel" aria-labelledby="login-tab">
                        <div class="row">
                            <div class="col-6 login-image">
                            </div>
                            <div class="col-6 p-5">                                
                                <h1>Bejelentkezés</h1>
                                 <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                <form method="post">
                                    <div class="form-group">                                                                
                                        <label asp-for="Email">@Html.DisplayNameFor(m => m.Email)</label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">                                        
                                        <label asp-for="Password">@Html.DisplayNameFor(m => m.Password)</label>
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <div class="custom-control custom-checkbox">
                                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                            <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Bejelentkezés</button>
                                </form>                                    
                            </div>   
                        </div>                                
                    </div>
                </div>
            </div>
        </div>
    </div>   
</div>


